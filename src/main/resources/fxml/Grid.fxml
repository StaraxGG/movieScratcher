<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.BorderPane"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         prefWidth="500" prefHeight="500">

    <top>
        <HBox >
            <children>
                <TextField fx:id="txtSearch">
                </TextField>
                <Button fx:id="btnSearch" text="Search">
                </Button>
            </children>
        </HBox>
    </top>
    <center>
        <ScrollPane>
            <GridPane fx:id="layoutCenterGrid" prefHeight="-Infinity" prefWidth="-Infinity">
            </GridPane>
        </ScrollPane>
    </center>

</fx:root>