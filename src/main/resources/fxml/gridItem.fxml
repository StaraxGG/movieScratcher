<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<fx:root type="javafx.scene.layout.BorderPane"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        prefWidth="200" style="-fx-background-color: #081c24;">
    <center>
        <ImageView
                fx:id="imgPoster"
                preserveRatio="true"
                fitWidth="200"/>
    </center>
    <bottom>
        <VBox>
            <children>
                <Label fx:id="lblMovieTitle" maxWidth="Infinity" alignment="TOP_CENTER" maxHeight="Infinity"
                       style="-fx-background-color: #081c24;-fx-font: 15px Tahoma;-fx-font-smoothing-type: lcd;-fx-text-fill: #FFFFFF;
    -fx-highlight-fill: derive(-fx-control-inner-background,-20%);
    -fx-highlight-text-fill: -fx-text-inner-color;">
                    <padding><Insets top="10" right="10" bottom="0" left="10"/></padding>
                </Label>
                <GridPane prefWidth="200">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" halignment="CENTER" percentWidth="50.0" />
                        <ColumnConstraints hgrow="SOMETIMES" halignment="CENTER" percentWidth="50.0" />
                    </columnConstraints>
                    <children>
                        <HBox GridPane.rowIndex="0" GridPane.columnIndex="0">
                                    <ImageView fx:id="btnReview" fitWidth="25"
                                               preserveRatio="true">
                                    </ImageView>
                            <GridPane>
                                <padding><Insets top="0" right="0" bottom="0" left="10"/></padding>
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" halignment="CENTER" percentWidth="100.0" />
                                </columnConstraints>
                                <children>
                                    <Label fx:id="lblReviews" text="75%"
                                           style="-fx-background-color: #081c24;-fx-font: 20px Tahoma;-fx-font-smoothing-type: lcd;-fx-text-fill: #FFFFFF;
                                            -fx-highlight-fill: derive(-fx-control-inner-background,-20%);
                                            -fx-highlight-text-fill: -fx-text-inner-color;">

                                    </Label>
                                </children>
                            </GridPane>

                        </HBox>
                        <ImageView fx:id="btnPlus"
                                   fitWidth="25"
                                   preserveRatio="true"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.rowSpan="3">

                        </ImageView>
                    </children>
                </GridPane>
            </children>

        </VBox>

    </bottom>
</fx:root>

